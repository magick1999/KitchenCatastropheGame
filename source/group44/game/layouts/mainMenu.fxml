<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="root" fx:id="root" prefHeight="400.0" prefWidth="600.0" stylesheets="@group44/resources/application.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group44.game.layoutControllers.MainMenuController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50" stylesheets="@group44/resources/application.css" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20" stylesheets="@group44/resources/application.css">
               <children>
                  <Button id="button" fx:id="profileSelection" mnemonicParsing="false" stylesheets="@group44/resources/application.css" text="Select Profile" />
                  <ListView fx:id="profiles" prefHeight="200.0" prefWidth="200.0" stylesheets="@group44/resources/application.css" />
                  <Button id="button" fx:id="play" mnemonicParsing="false" stylesheets="@group44/resources/application.css" text="Play" />
                  <Button id="button" fx:id="newProfile" mnemonicParsing="false" stylesheets="@group44/resources/application.css" text="New Profile" />
               </children>
            </HBox>
            <Button id="button" fx:id="motd" mnemonicParsing="false" stylesheets="@resources/application.css" text="MOTD Viewer" textAlignment="CENTER" textOverrun="CLIP" />
         </children>
      </VBox>
   </center>
   <top>
      <ImageView id="logo" fx:id="logo" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
			<Image url="@group44/resources/KitchenCatastrophe.png" />
         </image></ImageView>
   </top>
   <bottom>
      <Button id="button" fx:id="quit" alignment="CENTER" mnemonicParsing="false" stylesheets="@group44/resources/application.css" text="Quit Game" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin></Button>
   </bottom>
</BorderPane>
