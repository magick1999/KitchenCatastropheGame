<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane id="root" fx:id="root" stylesheets="@group44/resources/application.css" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group44.game.layoutControllers.MainMenuController">
   <center>
      <VBox alignment="CENTER" stylesheets="@group44/resources/application.css" prefHeight="200.0" prefWidth="100.0" spacing="50" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" stylesheets="@group44/resources/application.css" prefHeight="100.0" prefWidth="200.0" spacing="20">
               <children>
                  <Button id="button" fx:id="profileSelection" stylesheets="@group44/resources/application.css" mnemonicParsing="false" text="Select Profile" />
                  <ListView fx:id="profiles" stylesheets="@group44/resources/application.css" prefHeight="200.0" prefWidth="200.0" />
                  <Button id="button" fx:id="play" stylesheets="@group44/resources/application.css" mnemonicParsing="false" text="Play" />
                  <Button id="button" fx:id="newProfile" stylesheets="@group44/resources/application.css" mnemonicParsing="false" text="New Profile" />
               </children>
            </HBox>
            <Button id="button" fx:id="quit" stylesheets="@group44/resources/application.css" mnemonicParsing="false" text="Quit Game" />
         </children>
      </VBox>
   </center>
   <top>
      <ImageView id="logo" fx:id="logo" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
			<Image url="@group44/resources/KitchenCatastrophe.png" />
         </image></ImageView>
   </top>
   <bottom>
      <TextFlow stylesheets="@group44/resources/application.css" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
