<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane id="root" fx:id="root" prefHeight="400.0" prefWidth="600.0" stylesheets="@resources/application.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group44.MainMenuController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50" BorderPane.alignment="CENTER">
         <children>
            <Button id="button" fx:id="profilesText" mnemonicParsing="false" stylesheets="@resources/application.css" text="Profile Selector" textAlignment="CENTER" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20">
               <children>
                  <Button id="button" fx:id="profileSelection" mnemonicParsing="false" stylesheets="@resources/application.css" text="Select Profile" />
                  <ListView fx:id="profiles" prefHeight="200.0" prefWidth="200.0" />
                  <Button id="button" fx:id="play" mnemonicParsing="false" stylesheets="@resources/application.css" text="Play" />
                  <Button id="button" fx:id="newProfile" mnemonicParsing="false" stylesheets="@resources/application.css" text="New Profile" />
               </children>
            </HBox>
            <Button id="button" fx:id="leaderboard" mnemonicParsing="false" stylesheets="@resources/application.css" text="Leaderboard" textAlignment="CENTER" textOverrun="CLIP" />
            <Button id="button" fx:id="quit" mnemonicParsing="false" stylesheets="@resources/application.css" text="Quit" textAlignment="CENTER" textOverrun="CLIP" />
         </children>
      </VBox>
   </center>
   <top>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <TextFlow prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
